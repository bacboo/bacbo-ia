# LÃ³gica de sugestÃ£o com base nos Ãºltimos 3 resultados
if ultimos.count("Player") == 3:
    sugestao = "âš ï¸ **TrÃªs vitÃ³rias seguidas do Player. Aposte no BANKER!**"
elif ultimos.count("Banker") == 3:
    sugestao = "âš ï¸ **TrÃªs vitÃ³rias seguidas do Banker. Aposte no PLAYER!**"
elif "Empate" in ultimos:
    sugestao = "ğŸš« **Empate recente. Melhor aguardar uma entrada mais segura.**"
else:
    # LÃ³gica baseada na probabilidade de 80%
    if player_prob >= 0.80:
