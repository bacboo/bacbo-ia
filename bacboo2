import streamlit as st
import random
import matplotlib.pyplot as plt

# TÃ­tulo
st.title("ğŸ² IA de Entradas para Bac Bo")

# Ãrea para inserir resultados
resultados = st.text_area("Digite os Ãºltimos resultados (um por linha):", 
"""
Player
Player
Banker
Player
Empate
Player
Banker
Player
""")

# Processar os resultados
lista = [r.strip().title() for r in resultados.splitlines() if r.strip()]

# Contagem de resultados
player_wins = lista.count("Player")
banker_wins = lista.count("Banker")
empates = lista.count("Empate")

# ExibiÃ§Ã£o dos resultados
st.write(f"ğŸ“Š Total de rodadas: {len(lista)}")
st.write(f"ğŸ§â€â™‚ï¸ Player: {player_wins}")
st.write(f"ğŸ¦ Banker: {banker_wins}")
st.write(f"ğŸ¤ Empates: {empates}")

# Probabilidade de vitÃ³ria
total_rounds = len(lista)
if total_rounds > 0:
    player_prob = player_wins / total_rounds
    banker_prob = banker_wins / total_rounds
    empate_prob = empates / total_rounds
else:
    player_prob = banker_prob = empate_prob = 0

# Exibindo as probabilidades
st.write(f"ğŸ“‰ Probabilidade de vitÃ³ria - Player: {player_prob*100:.2f}%")
st.write(f"ğŸ“‰ Probabilidade de vitÃ³ria - Banker: {banker_prob*100:.2f}%")
st.write(f"ğŸ“‰ Probabilidade de Empate: {empate_prob*100:.2f}%")

# VisualizaÃ§Ã£o grÃ¡fica
st.subheader("ğŸ“Š GrÃ¡fico de VitÃ³ria vs Empate vs Banker")
labels = ['Player', 'Banker', 'Empate']
sizes = [player_wins, banker_wins, empates]
colors = ['#ff9999','#66b3ff','#99ff99']

fig, ax = plt.subplots()
ax.pie(sizes, labels=labels, colors=colors, autopct='%1.1f%%', startangle=90)
ax.axis('equal')  # Equal aspect ratio ensures that pie is drawn as a circle.
st.pyplot(fig)

# Ãšltimos resultados para sugerir entradas
ultimos = lista[-3:]
